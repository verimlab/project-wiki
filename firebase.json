{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/gemini", "function": "gemini" },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
